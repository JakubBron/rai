@page
@model WebApp.Pages.TEMPADMIN.IndexModel
@{
	ViewData["Title"] = "Reset User Reservation Flag";
}

<h1>Reset User Reservation Flag</h1>

@if (TempData["Success"] != null)
{
	<div class="alert alert-success">@TempData["Success"]</div>
}

<form method="post">
	<div class="form-group">
		<label for="SelectedUserId">Select User</label>
		<select asp-for="SelectedUserId" class="form-control" asp-items="@(new SelectList(Model.Users, "Id", "Email"))">
			<option value="">-- Select user --</option>
		</select>
		<span asp-validation-for="SelectedUserId" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label asp-for="NewIsHoldingReservation">Is Holding Reservation?</label>
		<input asp-for="NewIsHoldingReservation" type="checkbox" />
	</div>

	<button type="submit" class="btn btn-primary mt-3">Update</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}