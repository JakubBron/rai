@page
@model WebApp.Pages.Reservation.BlockSlotsModel

@{
	ViewData["Title"] = "Block Slots";
}

<h2>Block Slots</h2>

<form method="post" class="mt-3">

	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<div class="form-group">
		<label asp-for="Input.Start"></label>
		<input asp-for="Input.Start" class="form-control" type="datetime-local" step="60" />
		<span asp-validation-for="Input.Start" class="text-danger"></span>
	</div>

	<div class="form-group mt-3">
		<label asp-for="Input.End"></label>
		<input asp-for="Input.End" class="form-control" type="datetime-local" step="60" />
		<span asp-validation-for="Input.End" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary mt-3">Block</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}