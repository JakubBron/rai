@page
@model WebApp.Pages.Reservation.Export.IndexModel
@{
	ViewData["Title"] = "Export Reservations";
}

<h1>Export Reservations</h1>

<form method="post">
	<div class="form-group">
		<label asp-for="Input.RoomId"></label>
		<select asp-for="Input.RoomId" class="form-control">
			<option value="">-- Select room --</option>
			@foreach (var room in Model.Rooms)
			{
				<option value="@room.Id">@room.RoomNumber (@room.RoomName)</option>
			}
		</select>
		<span asp-validation-for="Input.RoomId" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label asp-for="Input.StartDate"></label>
		<input asp-for="Input.StartDate" type="date" class="form-control" />
		<span asp-validation-for="Input.StartDate" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label asp-for="Input.EndDate"></label>
		<input asp-for="Input.EndDate" type="date" class="form-control" />
		<span asp-validation-for="Input.EndDate" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label asp-for="Input.Format"></label>
		<select asp-for="Input.Format" class="form-control">
			<option value="txt">TXT</option>
			<option value="xlsx">Excel (.xlsx)</option>
			<option value="pdf">PDF</option>
		</select>
		<span asp-validation-for="Input.Format" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary mt-3">Export</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}